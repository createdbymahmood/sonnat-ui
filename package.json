{
  "name": "@sonnat/ui",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "version": "2.0.0-canary.0",
  "description": "React component library using Sonnat Design System to build faster, elegant, and accessible web applications.",
  "license": "MIT",
  "homepage": "https://www.sonnat.dev/",
  "repository": "git@github.com:sonnat/sonnat-ui.git",
  "sideEffects": false,
  "keywords": [
    "sonnat",
    "ui",
    "sonnat-ui",
    "sonnat design system",
    "design system",
    "component library",
    "sonnat component library",
    "react component library",
    "react"
  ],
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "color": "^4.1.0",
    "jss": "^10.9.0",
    "jss-plugin-camel-case": "^10.9.0",
    "jss-plugin-default-unit": "^10.9.0",
    "jss-plugin-extend": "^10.9.0",
    "jss-plugin-global": "^10.9.0",
    "jss-plugin-nested": "^10.9.0",
    "jss-plugin-props-sort": "^10.9.0",
    "jss-plugin-rule-value-function": "^10.9.0",
    "jss-plugin-vendor-prefixer": "^10.9.0",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.7.2",
    "react-is": "^17.0.2",
    "react-jss": "^10.9.0"
  },
  "devDependencies": {
    "@size-limit/file": "^7.0.4",
    "@size-limit/webpack": "^7.0.4",
    "@types/color": "^3.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.throttle": "^4.1.6",
    "@types/node": "^17.0.2",
    "@types/prettier": "^2.4.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.4",
    "typescript": "^4.5.4",
    "yargs": "^17.3.0"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "postbuild": "yarn size:check",
    "build": "npm-run-all build:cjs build:esm build:minify build:packages",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "build:packages": "",
    "build:minify": "",
    "size:check": "node ./scripts/size-check.js",
    "size:core": "size-limit",
    "size:core:why": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/esm/index.js",
      "ignore": [
        "react",
        "react-dom",
        "prop-types"
      ]
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md,json,scss}": "prettier --write"
  }
}
